{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "noEmit": false,
        "target": "ES5",
        "outDir": "lib",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": ["ES2015"],
        "typeRoots": ["src/**"],
    },
    "include": ["src", "src/**/*.d.ts"],
    "exclude": [
        "node_modules",
        "lib",
        "test"
    ],
}